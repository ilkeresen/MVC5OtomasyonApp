@model MVC5TicariOtomasyon.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "KalemEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Fatura Kalem Ekle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Fatura/Index">Faturalar</a></li>
                    <li class="breadcrumb-item"><a href="">Fatura Kalem Ekle</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card mb-4">
    <div class="card card-gray-dark">
        <div class="card-header">
            <h3 class="card-title">Yeni Fatura Kalem Ekle</h3>
        </div>
    </div>
    <form method="post">
        <div class="card-body">

            <div class="form-group">
                <label for="FaturaKalemAciklama">Fatura Kalem Açıklama Giriniz.</label>
                @Html.TextBoxFor(x => x.FaturaKalemAciklama, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="FaturaKalemMiktar">Fatura Kalem Miktar Giriniz.</label>
                @Html.TextBoxFor(x => x.FaturaKalemMiktar, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="FaturaKalemBirimFiyat">Fatura Kalem Birim Fiyat Giriniz.</label>
                @Html.TextBoxFor(x => x.FaturaKalemBirimFiyat, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="FaturaKalemTutar">Fatura Kalem Tutar Giriniz.</label>
                @Html.TextBoxFor(x => x.FaturaKalemTutar, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="Faturaid">Fatura ID Giriniz.</label>
                @Html.TextBoxFor(x => x.Faturaid, new { @class = "form-control" })
            </div>

        </div>
        <div class="card-body">
            <button type="submit" class="btn btn-dark">Yeni Fatura Kalem Kaydet</button>
        </div>
    </form>
</div>