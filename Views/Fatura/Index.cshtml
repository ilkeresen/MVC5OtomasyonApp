@using MVC5TicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Fatura Listesi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="">Faturalar</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card mb-4">
    <div class="card card-gray-dark">
        <div class="card-header">
            <h3 class="card-title">Faturalar Tablosu</h3>
        </div>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Fatura Seri Sıra No</th>
                    <th>Fatura Tarih</th>
                    <th>Fatura Toplam Tutar</th>
                    <th>Fatura Saat</th>
                    <th>Fatura Güncelle</th>
                    <th>Fatura Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 0; }
                @foreach (var k in Model)
                {
                    <tr>
                        <td>@(++i) </td>
                        <td>@k.FaturaSeriNo @k.FaturaSiraNo</td>
                        <td>@Convert.ToDateTime(k.FaturaTarih).ToString("dd/MM/yyyy")</td>
                        <td>@k.FaturaToplam.ToString("#,##0.00") ₺</td>
                        <td>@k.FaturaSaat</td>
                        <td>
                            <a href="/Fatura/FaturaGuncelle/@k.FaturaID" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Güncelle
                            </a>
                        </td>
                        <td>
                            <a href="/Fatura/FaturaDetay/@k.FaturaID" class="btn btn-info">
                                <i class="fas fa-eye"></i> Detay
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Fatura Seri Sıra No</th>
                    <th>Fatura Tarih</th>
                    <th>Fatura Toplam Tutar</th>
                    <th>Fatura Saat</th>
                    <th>Fatura Güncelle</th>
                    <th>Fatura Detaylar</th>
                </tr>
            </tfoot>
        </table>
        <a href="/Fatura/FaturaEkle" class="btn btn-dark">Yeni Fatura Ekle</a>
        <a href="/Fatura/DinamikFatura" class="btn btn-dark">Dinamik Fatura</a>
    </div>
</div>
