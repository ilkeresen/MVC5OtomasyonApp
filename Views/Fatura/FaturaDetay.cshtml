@using MVC5TicariOtomasyon.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Fatura Kalem Listesi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">AnaSayfa</a></li>
                    <li class="breadcrumb-item"><a href="/Fatura/Index">Faturalar</a></li>
                    <li class="breadcrumb-item"><a href="">Fatura Detay</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="alert alert-dark" role="alert">
    <b>@ViewBag.FaturaSeriNo Seri @ViewBag.FaturaSiraNo Sıra Numaralı Fatura</b>
</div>

<div class="card mb-4">
    <div class="card card-gray-dark">
        <div class="card-header">
            <h3 class="card-title">Fatura Kalem Tablosu</h3>
        </div>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Fatura Açıklama</th>
                    <th>Fatura Birim Fiyat</th>
                    <th>Fatura Tutar</th>
                </tr>
            </thead>
            <tbody>
                @{int i = 0;}
                @foreach (var k in Model)
                {
                    <tr>
                        <td>@(++i)</td>
                        <td>@k.FaturaKalemAciklama</td>
                        <td>@k.FaturaKalemMiktar</td>
                        <td>@k.FaturaKalemTutar.ToString("#,##0.00") ₺</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Fatura Açıklama</th>
                    <th>Fatura Birim Fiyat</th>
                    <th>Fatura Tutar</th>
                </tr>
            </tfoot>
        </table>
        <a href="/Fatura/KalemEkle" class="btn btn-dark">Yeni Kalem Ekle</a>
    </div>
</div>