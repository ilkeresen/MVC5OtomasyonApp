@using MVC5TicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Galeri</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="">Galeri</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<div class="col-12">
    <div class="card">
        <div class="card card-gray-dark">
            <div class="card-header">
                <h3 class="card-title">Resim Galerisi</h3>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var x in Model)
                {
                    <div class="col-sm-3">
                        <a href="@x.UrunGorsel" data-toggle="lightbox" data-title="@x.UrunAd" data-gallery="gallery">
                            <img src="@x.UrunGorsel" class="img-fluid mb-2" alt="@x.UrunAd @x.UrunAciklama" />
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>