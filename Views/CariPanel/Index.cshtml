@using MVC5TicariOtomasyon.Models.Siniflar
@model List<Mesajlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Profilim</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/CariPanel/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="">Profil</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">

                <!-- Profile Image -->
                <div class="card card-dark card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="~/AdminTema/dist/img/cari1.png"
                                 alt="Cari profil resmi">
                        </div>
                        <h3 class="profile-username text-center">@ViewBag.CariAdSoyad</h3>

                        <p class="text-muted text-center">@ViewBag.CariMail</p>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Toplam Siparişlerim:</b> <a class="float-right">@ViewBag.ToplamSatis</a>
                            </li>
                            <li class="list-group-item">
                                <b>Toplam Sipariş Tutar:</b> <a class="float-right">
                                    @ViewBag.ToplamTutar.ToString("#,##0.00")₺
                                </a>
                            </li>
                            <li class="list-group-item">
                                <b>Toplam Ürün Adet</b> <a class="float-right">@ViewBag.ToplamUrunAdet</a>
                            </li>
                        </ul>

                        <a href="/CariPanel/KargoTakip/" class="btn btn-dark btn-block"><b>Kargo Takip</b></a>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Hakkımda</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i>Meslek</strong>

                        <p class="text-muted">Junior Web Developer @ViewBag.Mailid</p>

                        <hr>

                        <strong><i class="fas fa-map-marker-alt mr-1"></i>Şehir</strong>

                        <p class="text-muted"></p>

                        <hr>

                        <strong><i class="fas fa-pencil-alt mr-1"></i>Telefon</strong>

                        <p class="text-muted">0530 966 51 54</p>

                        @*<hr>

                            <strong><i class="far fa-file-alt mr-1"></i></strong>

                            <p class="text-muted"></p>*@
                    </div>

                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Mesajlar</a></li>
                            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Duyurular</a></li>
                            <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Ayarlar</a></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="activity">
                                <!-- Post -->
                                @foreach (var item in Model)
                                {
                                    <div class="post">
                                        <div class="user-block">
                                            <img class="img-circle img-bordered-sm" src="~/AdminTema/dist/img/cari1.png" alt="user image">
                                            <span class="username">
                                                <a href="">@item.MesajGonderici</a>
                                            </span>
                                            <span class="description">@item.MesajKonu - @item.MesajTarih.ToShortDateString()</span>
                                        </div>
                                        <!-- /.user-block -->
                                        <p>
                                            @{string metin = System.Text.RegularExpressions.Regex.Replace(item.MesajIcerik, @"<(.|\n)*?>", string.Empty); }
                                            @Html.Raw(metin)
                                        </p>
                                    </div>
                                }

                                <!-- /.post -->
                            </div>
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                @Html.Action("CariDuyuru", "CariPanel")
                            </div>
                            <!-- /.tab-pane -->

                            <div class="tab-pane" id="settings">
                                @Html.Action("CariAyarlar","CariPanel")
                            </div>
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->