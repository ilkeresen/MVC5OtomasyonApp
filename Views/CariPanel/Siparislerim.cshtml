@using MVC5TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Sipariş Geçmişim</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/CariPanel/Index/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="">Sipariş Geçmişim</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card mb-4">
    <div class="card card-gray-dark">
        <div class="card-header">
            <h3 class="card-title">Sipariş Tablosu</h3>
        </div>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Satış Fiyat</th>
                    <th>Satış Tarih</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model)
                {
                    <tr>
                        <td>@k.Urun.UrunAd</td>
                        <td>@k.SatisFiyat.ToString("#,##0.00") ₺</td>
                        <td>@Convert.ToDateTime(k.SatisTarih).ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Satış Fiyat</th>
                    <th>Satış Tarih</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>