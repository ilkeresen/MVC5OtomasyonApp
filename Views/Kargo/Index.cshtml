@using MVC5TicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kargo Listesi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="">Kargolar</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card mb-4">
    <div class="card card-gray-dark">
        <div class="card-header">
            <h3 class="card-title">Kargolar Tablosu</h3>
        </div>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Takip Kodu</th>
                    <th>Personel</th>
                    <th>Alıcı</th>
                    <th>Tarih</th>
                    <th>Detaylar</th>
                </tr>
            </thead>
            <tbody>
                @{int i = 0; }
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@(++i)</td>
                        <td>@u.KargoDetayTakipKodu</td>
                        <td>@u.KargoDetayPersonel</td>
                        <td>@u.KargoDetayAlici</td>
                        <td>@Convert.ToDateTime(u.KargoTarih).ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="/Kargo/KargoTakipDetay/@u.KargoDetayTakipKodu" class="btn btn-dark">
                                <i class="fas fa-eye"></i> Detaylar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Takip Kodu</th>
                    <th>Personel</th>
                    <th>Alıcı</th>
                    <th>Tarih</th>
                    <th>Detaylar</th>
                </tr>
            </tfoot>
        </table>
        <a href="/Kargo/KargoDetayEkle" class="btn btn-dark">Yeni Kargo Ekle</a>
    </div>
</div>

