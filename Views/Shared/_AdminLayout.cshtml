    <script>
        //Show Modal.
        function addNewOrder() {
            $("#newOrderModal").modal();
        }

        //Add Multiple Order.

        $("#addToList").click(function (e) {
            e.preventDefault();
            if ($.trim($("#FaturaKalemAciklama").val()) == "" || $.trim($("#FaturaKalemBirimFiyat").val()) == "" || $.trim($("#FaturaKalemMiktar").val()) == "") return;
            var FaturaKalemAciklama = $("#FaturaKalemAciklama").val(),
                FaturaKalemBirimFiyat = $("#FaturaKalemBirimFiyat").val(),
                FaturaKalemMiktar = $("#FaturaKalemMiktar").val(),
                detailsTableBody = $("#detailsTable tbody");
            var degerler = '<tr><td>' + FaturaKalemAciklama + '</td><td>' + FaturaKalemBirimFiyat + '</td><td>' + FaturaKalemMiktar + '</td><td>' + (parseFloat(FaturaKalemBirimFiyat) * parseInt(FaturaKalemMiktar)) + '</td><td><a data-itemId="0" href="#" class="deleteItem">Çıkart</a></td></tr>';
            detailsTableBody.append(degerler);
            clearItem();
        });

        //After Add A New Order In The List, Clear Clean The Form For Add More Order.

        function clearItem() {

            $("#FaturaKalemAciklama").val('');
            $("#FaturaKalemBirimFiyat").val('');
            $("#FaturaKalemMiktar").val('');

        }

        // After Add A New Order In The List, If You Want, You Can Remove It.

        $(document).on('click', 'a.deleteItem', function (e) {

            e.preventDefault();
            var $self = $(this);
            if ($(this).attr('data-itemId') == "0") {
                $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {
                    $(this).remove();
                });
            }
        });

        //After Click Save Button Pass All Data View To Controller For Save Database

        function saveOrder(data) {

            return $.ajax({

                contentType: 'application/json; charset=utf-8',

                dataType: 'json',

                type: 'POST',

                url: "/Fatura/DinamikFaturaKaydet",

                data: data,

                success: function (result) {

                    alert(result);

                    location.reload();

                },

                error: function () {

                    alert("Error!")

                }

            });

        }

        //Collect Multiple Order List For Pass To Controller

        $("#saveOrder").click(function (e) {

            e.preventDefault();
            var orderArr = [];
            orderArr.length = 0;

            $.each($("#detailsTable tbody tr"), function () {

                orderArr.push({

                    FaturaKalemAciklama: $(this).find('td:eq(0)').html(),
                    FaturaKalemBirimFiyat: $(this).find('td:eq(1)').html(),
                    FaturaKalemMiktar: $(this).find('td:eq(2)').html(),
                    FaturaKalemTutar: $(this).find('td:eq(3)').html()

                });

            });

            var data = JSON.stringify({

                FaturaSeriNo: $("#FaturaSeriNo").val(),
                FaturaSiraNo: $("#FaturaSiraNo").val(),
                FaturaTarih: $("#FaturaTarih").val(),
                FaturaVergiDairesi: $("#FaturaVergiDairesi").val(),
                FaturaSaat: $("#FaturaSaat").val(),
                FaturaTeslimEden: $("#FaturaTeslimEden").val(),
                FaturaTeslimAlan: $("#FaturaTeslimAlan").val(),
                FaturaToplam: $("#FaturaToplam").val(),

                order: orderArr

            });

            $.when(saveOrder(data)).then(function (response) {

                console.log(response);

            }).fail(function (err) {

                console.log(err);

            });

        });

    </script>
