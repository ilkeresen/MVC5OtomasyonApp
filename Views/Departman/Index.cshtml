@using MVC5TicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Departman Listesi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="">Departmanlar</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="card">
    <div class="card card-gray-dark">
        <div class="card-header">
            <h3 class="card-title">Departmanlar Tablosu</h3>
        </div>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Departman Adı</th>
                    <th>Departman Sil</th>
                    <th>Departman Güncelle</th>
                    <th>Departman Detay</th>
                </tr>
            </thead>
            <tbody>
                @{int i = 0; }
                @foreach (var k in Model)
                {
                    <tr>
                        <td>@(++i)</td>
                        <td>@k.DepartmanAd</td>
                        <td align="center">
                            @*<a href="/Departman/DepartmanSil/@k.DepartmanID" class="btn btn btn-danger">Sil</a>*@
                            <a href="/Departman/DepartmanSil/@k.DepartmanID" class="btn btn-danger">
                                <i class="fas fa-backspace"></i> Sil
                            </a>
                        </td>
                        <td align="center">
                            <a href="/Departman/DepartmanGuncelle/@k.DepartmanID" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Güncelle
                            </a>
                        </td>
                        <td align="center">
                            <a href="/Departman/DepartmanDetay/@k.DepartmanID" class="btn btn-info">
                                <i class="fas fa-eye"></i> Detay
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Departman Adı</th>
                    <th>Departman Sil</th>
                    <th>Departman Güncelle</th>
                    <th>Departman Detay</th>
                </tr>
            </tfoot>
        </table>
        <a href="/Departman/DepartmanEkle" class="btn btn-dark">Yeni Departman Ekle</a>
    </div>
</div>