@using MVC5TicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Departman Detay</h1>
            </div>
            <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">AnaSayfa</a></li>
                        <li class="breadcrumb-item"><a href="/Departman/Index">Departman</a></li>
                        <li class="breadcrumb-item"><a href="">Departman Detay</a></li>
                    </ol>
                </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="alert alert-dark">
     <b>@ViewBag.DepartmanAdi Departmanı</b>
</div>

<div class="card mb-4">
    <div class="card card-gray-dark">
        <div class="card-header">
            <h3 class="card-title">Departman Detayları</h3>
        </div>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Personel ID</th>
                    <th>Personel Adı</th>
                    <th>Personel Soyadı</th>
                    <th>Personel Satışları</th>
                </tr>
            </thead>
            <tbody>
                @{int i = 0;}
                @foreach (var k in Model)
                {
                    <tr>
                        <td>@(++i)</td>
                        <td>@k.PersonelAd</td>
                        <td>@k.PersonelSoyad</td>
                        <td>
                            <a href="/Departman/DepartmanPersonelSatis/@k.PersonelID" class="btn btn-info">
                                <i class="fas fa-cart-arrow-down"></i> Satışlar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Personel ID</th>
                    <th>Personel Adı</th>
                    <th>Personel Soyadı</th>
                    <th>Personel Satışları</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>